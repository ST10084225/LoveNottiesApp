<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DreamCentre"
    android:id="@+id/mainLin"
    android:background="@drawable/autumn_gradient_animation_rect">

    <LinearLayout
        android:id="@+id/HeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/autumn_gradient_animation_rect_inv"
        android:gravity="end"
        android:orientation="horizontal"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <RelativeLayout
            android:id="@+id/HeaderLogo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/green_gradient_oval">

            <ImageView
                android:id="@+id/imgBackground"
                android:layout_width="35dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fadingEdge="vertical"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/logo"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.90"
            android:background="@color/colorTransparent"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:padding="5dp"
            android:shadowColor="#fff"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="8"
            android:text="Love Notties"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="22sp"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:alpha="0.90"
            android:background="@color/colorTransparent"
            android:fontFamily="sans-serif-black"
            android:padding="5dp"
            android:shadowColor="#fff"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="8"
            android:text="Dream Centre"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="22sp"
            tools:ignore="TextContrastCheck" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/textViewBlog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.2"
            android:background="@color/black"
            android:clickable="true"
            android:gravity="center"
            android:textColor="#000000"
            tools:ignore="SpeakableTextPresentCheck"
            tools:layout_editor_absoluteX="76dp"
            tools:layout_editor_absoluteY="430dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/colorTransparent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:background="@color/colorTransparent"
                app:cardBackgroundColor="@color/colorTransparent"
                android:layout_margin="10dp"
                app:cardCornerRadius="16dp"
                tools:ignore="DuplicateClickableBoundsCheck">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:background="@color/colorTransparent">
                    <ImageView
                        android:id="@+id/dcLogo"
                        android:layout_width="350dp"
                        android:layout_height="200dp"
                        android:src="@drawable/dclogo"
                        android:background="@drawable/rounded_corners"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"/>

                    <TextView
                        android:id="@+id/dcIntro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dcIntro"
                        android:gravity="center"
                        android:shadowColor="#fff"
                        android:shadowDx="0.0"
                        android:shadowDy="0.0"
                        android:shadowRadius="5"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-light"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/coursesTitle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:alpha="0.90"
                android:fontFamily="sans-serif-black"
                android:shadowColor="#fff"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="8"
                android:text="Courses"
                android:background="@drawable/bottom_background"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="30sp"
                tools:ignore="TextContrastCheck"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"/>
            <TextView
                android:id="@+id/courseOne"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:alpha="0.90"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:padding="5dp"
                android:shadowColor="#fff"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="8"
                android:text="Work Ready"
                android:background="@drawable/bottom_background"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="25dp"
                tools:ignore="TextContrastCheck"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:background="@color/colorTransparent"
                app:cardBackgroundColor="@color/colorTransparent"
                android:layout_margin="10dp"
                app:cardCornerRadius="16dp"
                tools:ignore="DuplicateClickableBoundsCheck">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:background="@color/colorTransparent">

                    <TextView
                        android:id="@+id/courseOneDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dcCourseOne"
                        android:gravity="center"
                        android:shadowColor="#fff"
                        android:shadowDx="0.0"
                        android:shadowDy="0.0"
                        android:shadowRadius="5"
                        android:fontFamily="sans-serif-light"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/courseTwo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:alpha="0.90"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:padding="5dp"
                android:shadowColor="#fff"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="8"
                android:text="Office Admin"
                android:background="@drawable/bottom_background"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="25dp"
                tools:ignore="TextContrastCheck"
                android:layout_marginTop="10dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:background="@color/colorTransparent"
                app:cardBackgroundColor="@color/colorTransparent"
                android:layout_margin="10dp"
                app:cardCornerRadius="16dp"
                tools:ignore="DuplicateClickableBoundsCheck">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:background="@color/colorTransparent">

                    <TextView
                        android:id="@+id/courseTwoDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dcCourseTwo"
                        android:gravity="center"
                        android:fontFamily="sans-serif-light"
                        android:shadowColor="#fff"
                        android:shadowDx="0.0"
                        android:shadowDy="0.0"
                        android:shadowRadius="5"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>



            <TextView
                android:id="@+id/courseThree"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:alpha="0.90"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:padding="5dp"
                android:shadowColor="#fff"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="8"
                android:text="Computer Literacy"
                android:background="@drawable/bottom_background"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="25dp"
                tools:ignore="TextContrastCheck"
                android:layout_marginTop="10dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:background="@color/colorTransparent"
                app:cardBackgroundColor="@color/colorTransparent"
                android:layout_margin="10dp"
                app:cardCornerRadius="16dp"
                tools:ignore="DuplicateClickableBoundsCheck">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:background="@color/colorTransparent">
                    <TextView
                        android:id="@+id/courseThreeDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dcCourseThree"
                        android:gravity="center"
                        android:fontFamily="sans-serif-light"
                        android:shadowColor="#fff"
                        android:shadowDx="0.0"
                        android:shadowDy="0.0"
                        android:shadowRadius="5"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:id="@+id/EndLayout"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@drawable/bottom_background"
                android:gravity="end"
                android:orientation="vertical"
                android:padding="5dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp"
                android:layout_marginTop="10dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:background="@color/colorTransparent"
                app:cardBackgroundColor="@color/colorTransparent"
                android:layout_margin="10dp"
                app:cardCornerRadius="16dp"
                tools:ignore="DuplicateClickableBoundsCheck">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:background="@color/colorTransparent">

                    <ImageView
                        android:layout_width="350dp"
                        android:layout_height="200dp"
                        android:src="@drawable/dcgrad"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rounded_corners"
                        android:layout_gravity="center"
                        android:elevation="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="@string/dcContact"
                        android:layout_gravity="center"
                        android:shadowColor="#fff"
                        android:shadowDx="0.0"
                        android:shadowDy="0.0"
                        android:shadowRadius="5"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/EndLayoutTwo"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@drawable/bottom_background"
                android:gravity="end"
                android:orientation="vertical"
                android:padding="5dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>


    </ScrollView>
    </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/autumn_gradient_animation_rect_inv"
        android:elevation="2dp"
        app:itemIconSize="30dp"
        app:itemIconTint="@drawable/item_selector"
        app:itemRippleColor="@color/black"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.976"
        app:menu="@menu/bottom_menu" />

</LinearLayout>