<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/autumn_gradient_animation_rect"
    android:id="@+id/mainLin"
    tools:context=".Donate">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/HeaderLayout"
        android:gravity="end"
        android:background="@drawable/autumn_gradient_animation_rect_inv"
        android:padding="5dp">
        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/HeaderLogo"
            android:layout_gravity="center"
            android:background="@drawable/green_gradient_oval">
            <ImageView
                android:id="@+id/imgBackground"
                android:layout_width="33dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/logo"
                android:fadingEdge="vertical"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Love Notties"
            android:alpha="0.90"
            android:gravity="center"
            android:background="@color/colorTransparent"
            android:padding="5dp"
            android:shadowColor="#fff"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="8"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            tools:ignore="TextContrastCheck"
            android:fontFamily="sans-serif-black"
            android:textSize="25dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Donate"
            android:alpha="0.90"
            android:background="@color/colorTransparent"
            android:padding="5dp"
            android:shadowColor="#fff"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="8"
            android:textColor="@color/white"
            android:textAlignment="textEnd"
            android:textColorHint="@color/white"
            tools:ignore="TextContrastCheck"
            android:fontFamily="sans-serif-black"
            android:textSize="25dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:background="@color/colorTransparent"
                app:cardBackgroundColor="@color/colorTransparent"
                android:layout_margin="10dp"
                app:cardCornerRadius="16dp"
                tools:ignore="DuplicateClickableBoundsCheck">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:background="@color/colorTransparent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Donate Via Zapper"
                        android:alpha="0.90"
                        android:gravity="center"
                        android:background="@color/colorTransparent"
                        android:padding="5dp"
                        android:shadowColor="#fff"
                        android:shadowDx="0.0"
                        android:shadowDy="0.0"
                        android:shadowRadius="8"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        tools:ignore="TextContrastCheck"
                        android:fontFamily="sans-serif-black"
                        android:textSize="25dp"/>

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="350dp"
                        android:layout_height="250dp"
                        android:elevation="10dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        app:srcCompat="@drawable/qrdonate" />

                    <Button
                        android:id="@+id/btnDonate"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="Donate"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Or"
                android:alpha="0.90"
                android:gravity="center"
                android:background="@color/colorTransparent"
                android:padding="5dp"
                android:shadowColor="#fff"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="8"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                tools:ignore="TextContrastCheck"
                android:fontFamily="sans-serif-black"
                android:textSize="25dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:background="@color/colorTransparent"
                app:cardBackgroundColor="@color/colorTransparent"
                android:layout_margin="10dp"
                app:cardCornerRadius="16dp"
                tools:ignore="DuplicateClickableBoundsCheck">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:background="@color/colorTransparent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Donate Via EFT"
                        android:alpha="0.90"
                        android:gravity="center"
                        android:background="@color/colorTransparent"
                        android:padding="5dp"
                        android:shadowColor="#fff"
                        android:shadowDx="0.0"
                        android:shadowDy="0.0"
                        android:shadowRadius="8"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        tools:ignore="TextContrastCheck"
                        android:fontFamily="sans-serif-black"
                        android:textSize="25dp"/>

                    <TextView
                        android:id="@+id/dcIntro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Account Holder: Love Notties NPC \nBank Name: First National Bank\nBranch Code: 220525\nAccount Number: 62904980853"
                        android:layout_marginBottom="15dp"
                        android:shadowColor="#fff"
                        android:shadowDx="0.0"
                        android:shadowDy="0.0"
                        android:shadowRadius="5"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="20dp"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </ScrollView>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/autumn_gradient_animation_rect_inv"
        android:elevation="2dp"
        app:itemIconSize="30dp"
        app:itemIconTint="@drawable/item_selector"
        app:itemRippleColor="@color/black"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.976"
        app:menu="@menu/bottom_menu" />
</LinearLayout>